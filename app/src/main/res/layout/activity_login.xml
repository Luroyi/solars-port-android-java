<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_pastel_light"
    android:padding="20dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_rounded_background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logotipo"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textViewEmailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="98dp"
            android:text="Correo electrónico:"
            android:textColor="@android:color/black"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/usuario_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:ems="10"
            android:padding="12dp"
            android:inputType="textEmailAddress"
            android:hint="Email" />


        <TextView
            android:id="@+id/Password_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="122dp"
            android:text="Contraseña:"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/contraseña_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:ems="10"
            android:padding="12dp"
            android:inputType="textPassword"
            android:text="Contraseña" />

        <TextView
            android:id="@+id/olvidaste_la_contraseña_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Olvidaste la contraseña"
            android:textColor="@android:color/holo_blue_light"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="80dp"
            android:clickable="true"
            android:linksClickable="true"
            android:padding="14dp"
            android:tooltipText="Clic para recuperar contraseña" />

        <Button
            android:id="@+id/iniciar_sesion_button"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="Ingresar"
            android:textSize="18sp" />

        <Button
            android:id="@+id/registrarse_button"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="Registrarse"
            android:textSize="18sp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_pastel_light"
    android:padding="20dp"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_rounded_background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logotipo"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="70dp"
            app:srcCompat="@drawable/logo1" />

        <EditText
            android:id="@+id/nombre_edittext"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:hint="Nombre"
            android:inputType="textEmailAddress" />


        <EditText
            android:id="@+id/usuario_edittext"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:hint="Email"
            android:inputType="textEmailAddress" />


        <EditText
            android:id="@+id/contrase単a1_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:minHeight="48dp"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:inputType="textPassword"
            android:hint="Contrase単a"/>


        <EditText
            android:id="@+id/contrase単are_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:minHeight="48dp"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:inputType="textPassword"
            android:hint="Repetir Contrase単a"/>

        <Button
            android:id="@+id/registrarse_button"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginBottom="30dp"
            android:text="Registrarse"
            android:fontFamily="@font/montserrat"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/volver_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Volver"
            android:textColor="@android:color/holo_blue_light"
            android:textStyle="bold"
            android:clickable="true"
            android:linksClickable="true"
            android:padding="14dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
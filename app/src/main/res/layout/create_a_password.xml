<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_pastel_light"
    android:padding="20dp"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_rounded_background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/montserrat"
            android:textColor="@android:color/black"
            android:text="CREAR NUEVA CONTRASEÑA"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="85dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/baseline_lock_person_24"
            />

        <TextView
            android:id="@+id/ingrese_su_nueva_clave_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/montserrat"
            android:text="Ingrese su nueva clave"
            android:textColor="@android:color/black"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/contraseña_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/montserrat"
            android:minHeight="48dp"
            android:ems="10"
            android:padding="12dp"
            android:inputType="textPassword"
            android:hint="Contraseña"
            android:textColorHint="@color/cardview_dark_background"/>

        <EditText
            android:id="@+id/repetir_contraseña_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/montserrat"
            android:minHeight="48dp"
            android:ems="10"
            android:padding="12dp"
            android:inputType="textPassword"
            android:hint="Repetir contraseña"/>

        <Button
            android:id="@+id/crear_contraseña_button"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:fontFamily="@font/montserrat"
            android:text="Crear contraseña"
            android:textSize="18sp" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
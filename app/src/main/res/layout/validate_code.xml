<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_pastel_light"
    android:padding="20dp"
    tools:context=".RecoveryPassActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_rounded_background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="310dp"
            android:layout_height="85dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="25dp"
            android:gravity="center"
            android:textColor="@android:color/holo_purple"
            android:fontFamily="@font/montserrat"
            android:text=" VERIFICA TU CORREO ELECTRONICO."
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="320dp"
            android:layout_height="120dp"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:text="Acabamos de enviar un código a tu correo electrónico yin********************97@gmail.com. Por favor ingresa el Código a continuación"
            android:fontFamily="@font/montserrat"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingresa el código" />

        <EditText
            android:id="@+id/editTextNumberPassword2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:inputType="numberPassword"
            android:fontFamily="@font/montserrat"
            android:hint="0    0    0    0    0    0"
            android:gravity="center"/>

        <TextView
            android:id="@+id/reenviar_codigo_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reenviar Codigó"
            android:textColor="@color/material_dynamic_tertiary0"
            android:fontFamily="@font/montserrat"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="90dp"
            android:textStyle="bold"
            android:clickable="true"
            android:linksClickable="true"
            android:padding="14dp"
            android:tooltipText="Clic para recuperar contraseña"
            android:onClick="onRheSendRecoveryCode"/>



        <Button
            android:id="@+id/send_code_button"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:text="Validar código"
            android:fontFamily="@font/montserrat"
            android:textSize="18sp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>